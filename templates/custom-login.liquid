<!--
  Custom Login Page Template
  Modern minimalist style with email, Google, and Facebook authentication
-->

<style>
  .custom-login-container {
    max-width: 400px;
    margin: 60px auto;
    padding: 2.5rem 2rem 2rem 2rem;
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 2px 24px rgba(0,0,0,0.07);
    display: flex;
    flex-direction: column;
    align-items: center;
    font-family: 'Inter', Arial, sans-serif;
  }
  .custom-login-title {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: #222;
    letter-spacing: -1px;
  }
  .custom-login-btn {
    width: 100%;
    padding: 0.75rem 0;
    margin-bottom: 1rem;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: background 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }
  .custom-login-btn.google {
    background: #fff;
    border: 1px solid #e0e0e0;
    color: #222;
  }
  .custom-login-btn.google:hover {
    background: #f5f5f5;
  }
  .custom-login-btn.facebook {
    background: #1877f2;
    color: #fff;
  }
  .custom-login-btn.facebook:hover {
    background: #145db2;
  }
  .custom-login-divider {
    width: 100%;
    text-align: center;
    border-bottom: 1px solid #eee;
    line-height: 0.1em;
    margin: 1.5rem 0 1.5rem 0;
    color: #aaa;
    font-size: 0.9rem;
  }
  .custom-login-divider span {
    background: #fff;
    padding: 0 1rem;
  }
  .custom-login-form {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .custom-login-form input {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    font-size: 1rem;
    background: #fafafa;
    color: #222;
    outline: none;
    transition: border 0.2s;
  }
  .custom-login-form input:focus {
    border: 1.5px solid #222;
  }
  .custom-login-form button[type="submit"] {
    background: #222;
    color: #fff;
    border: none;
    border-radius: 8px;
    padding: 0.75rem 0;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: background 0.2s;
  }
  .custom-login-form button[type="submit"]:hover {
    background: #444;
  }
  .custom-login-links {
    margin-top: 1rem;
    width: 100%;
    display: flex;
    justify-content: space-between;
    font-size: 0.95rem;
  }
  .custom-login-links a {
    color: #888;
    text-decoration: none;
    transition: color 0.2s;
  }
  .custom-login-links a:hover {
    color: #222;
  }
</style>

<div class="custom-login-container">
  <div class="custom-login-title">Sign in to your account</div>

  <a href="#" class="custom-login-btn google">
