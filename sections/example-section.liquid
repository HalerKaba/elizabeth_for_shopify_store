{% comment %}
  Example Section
  This is a basic section template. Customize the HTML and schema as needed.
{% endcomment %}

<section class="example-section">
  <div class="container">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.text }}</p>
  </div>
</section>

{% schema %}
{
  "name": "Example Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store!"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "This is an example section. You can customize this text from the theme editor."
    }
  ],
  "presets": [
    {
      "name": "Example Section",
      "category": "Custom"
    }
  ]
}
{% endschema %} 